{
    "app-id": "io.github.francis_piche.Kawaii-player",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "kawaii-player",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=host",
        "--env=PYTHONPATH=/app/lib/python3/dist-packages"
    ],
    "modules": [
        "python3-sip.json",
        {
            "name": "pyqt-builder",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/P/PyQt-builder/PyQt-builder-1.0.1.tar.gz",
                    "sha256": "2d19dcd078d2f86b162f9f3adf6a74098f1f0ee03b07774b0c0d603c484f264a"
                }
            ]
        },
        {
            "name": "pyqt",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app --no-deps PyQt5-5.13.2-5.13.2-cp35.cp36.cp37.cp38-abi3-manylinux1_x86_64.whl"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/ec/cc/b727405bc393c0dc1fbb2b928017f9cb6ea8b557070028edf1743ec14689/PyQt5-5.13.2-5.13.2-cp35.cp36.cp37.cp38-abi3-manylinux1_x86_64.whl",
                    "sha256": "1936c321301f678d4e6703d52860e1955e5c4964e6fd00a1f86725ce5c29083c"
                }
            ]
        },
        {
            "name": "pyqtwebengine",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app --no-deps PyQtWebEngine-5.13.2-5.13.2-cp35.cp36.cp37.cp38-abi3-manylinux1_x86_64.whl"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/8c/62/5463c863eae4309816fd3be7a7eb947e176b9126fb14cad4b4e9dc1bc514/PyQtWebEngine-5.13.2-5.13.2-cp35.cp36.cp37.cp38-abi3-manylinux1_x86_64.whl",
                    "sha256": "1266b24490d5425665109a7d0de85daadb5a4b23f37ec61c0664af37c7a140a8"
                }
            ]
        },
        {
            "name": "pycurl",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.pythonhosted.org/packages/source/p/pycurl/pycurl-7.43.0.3.tar.gz",
                    "sha256": "6f08330c5cf79fa8ef68b9912b9901db7ffd34b63e225dce74db56bb21deda8e"
                }
            ]
        },
        "python3-bs4.json",
        "python3-Pillow.json",
        "python3-mutagen.json",
        "python3-lxml.json",
        "python3-youtube_dl.json",
        "python3-certifi.json",
        "python3-PyOpenGL.json",
        {
            "name": "kawaii-player",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py sdist",
                "pip3 install --prefix=/app dist/kawaii-player-*.tar.gz"
            ],
            "sources": [
                {
                    "type": "git",
                    "path": "../",
                    "branch": "flatpak"
                }
            ]
        }
    ]
}